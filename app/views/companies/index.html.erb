<div class="container">
<h1>Companies</h1>

<table>
  <thead>
    <th>Name</th>
    <th>Options</th>
  </thead>
  <tbody id="companies">
    <% @companies.each do |company| %>
      <tr id="company_<%= company.id %>">
        <td id="company_<%= company.id %>_title"><%= link_to company.title, company_path(company.id) %></td>
        <td>
          <%= link_to 'borrar', company_path(company.id), method: :delete, remote: true %>
          <%= link_to 'editar', modal_edit_path(id: company.id), remote: true %>
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Agregar nueva empresa:</h3>
